    />


    <change_request_type
		name="登记卡车|注销卡车"
		code="REGISTER_TRUCK|UNREGISTER_TRUCK|[1,99]"
		icon="download|swap"
		display_order="1|2"
		bind_types="text()"
		step_configuration="text()"
		platform="$(platform)"
		_features="cr_type"
		_identified_by="code"
		
	/>
	





	
	
	<!-- PENDING ACTION FROM WHOM -->
    




    
	<change_request
		name="存款|转账|取款|[1,50]"
		
		create_time="createTime()"
		city="cityByIp()"
		request_type="$(change_request_type)"
		platform="$(platform)"
		
		_features="change_request"
	/>
	
	<event
		name="存款|转账|取款|[1,50]"
		cq="$(change_request)"
		_features="n*event"
		_bind_with_cr_type="REGISTER_TRUCK"
		
	/>












    

